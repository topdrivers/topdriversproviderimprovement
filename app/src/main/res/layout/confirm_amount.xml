<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/text_color_header"
            android:text="@string/confirm_amount"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--Others Name-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount_to_be_paid"
            android:layout_weight="0.5"
            android:textSize="15dp"
            android:inputType="text"
            android:background="@null"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:text="0"
            android:gravity="right"
            android:textSize="15dp"
            android:inputType="number"
            android:background="@null"
            android:padding="10dp"/>

    </LinearLayout>

    <!--Phone Number-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDialogueText"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:id="@+id/total_amount_given"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/enter_confirm_amount"
            android:gravity="center"
            android:textSize="15dp"
            android:inputType="numberDecimal"
            android:padding="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/confirm_amount_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="end"
        android:textSize="16dp"
        android:text="@string/submit"
        android:textColor="@color/text_color_header" />

</LinearLayout>